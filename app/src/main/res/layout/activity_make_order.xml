<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <include layout="@layout/toolbar_main"
        android:id="@+id/toolbar">
    </include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="135dp"
        android:layout_marginTop="16dp"
        android:background="@color/lightgrey">
    </View>


    <com.example.tienthanh.customfonts.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="INFORMATION"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_ccv"
        android:orientation="horizontal"
        android:padding="13dp">


        <com.example.tienthanh.customfonts.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:text="NAME"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />

        <com.example.tienthanh.customfonts.MyEditText
            android:id="@+id/info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#00000000"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:textSize="@dimen/text" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ccv"
        android:orientation="horizontal"
        android:padding="14dp">


        <com.example.tienthanh.customfonts.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:text="PHONE"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />

        <com.example.tienthanh.customfonts.MyEditText
            android:id="@+id/info_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#00000000"
            android:inputType="phone"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:textSize="@dimen/text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ccv"
        android:orientation="horizontal"
        android:padding="14dp">


        <com.example.tienthanh.customfonts.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:text="EMAIL"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />

        <com.example.tienthanh.customfonts.MyEditText
            android:id="@+id/info_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#00000000"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:textSize="@dimen/text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_ccv"
        android:orientation="horizontal"
        android:padding="14dp">


        <com.example.tienthanh.customfonts.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:text="ADDRESS"
            android:textColor="@color/lightgrey"
            android:textSize="@dimen/text" />

        <com.example.tienthanh.customfonts.MyEditText
            android:id="@+id/info_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#00000000"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/text"
            android:textColorHint="@color/text"
            android:textSize="@dimen/text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="41dp"
        android:orientation="vertical"
        android:background="@drawable/bg_pay"
        android:padding="14dp">


        <com.example.tienthanh.customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:onClick="onClickOrder"
            android:text="CONFIRM AND ORDER Rs. 1000.00"
            android:textColor="#fff"
            android:textSize="@dimen/text" />
    </LinearLayout>

    <com.example.tienthanh.customfonts.MyTextView
        android:padding="4dp"
        android:id="@+id/login"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="onClickLogin"
        android:text="Already Have An Account ! Login" />



</LinearLayout>


